name:                aenea-windows-server
version:             0.1.0.0
author:              grayjay
build-type:          Simple
cabal-version:       >=1.8
extra-source-files:  windows.h, winuser.h, winable.h

executable AeneaWindowsServer
  main-is:             Main.hs
  other-modules:       Windows
  build-depends:       base, Win32, bytestring, aeson,
                       happstack-lite, happstack-server, mtl,
                       containers, text, json-rpc-server
  ghc-options:         -Wall -fno-warn-missing-signatures
  hs-source-dirs:      src
  build-tools:         hsc2hs
  includes:            windows.h, winuser.h
  extra-libraries:     user32
